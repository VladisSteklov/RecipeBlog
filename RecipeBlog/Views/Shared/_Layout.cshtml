<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width">
    <title>РецептикБлог</title>
    <link rel="stylesheet" type="text/css" href="~/Content/css"/>
    <link rel="icon" href="~/recipe.ico" />
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top header-content">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="" href="@Url.Action("Index", "Home")">
                        <img class="header-img" src="~/Content/Images/header.png" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <div style="margin-top:10px">
                        <ul class="nav navbar-nav pull-right">  
                            <li>@Html.ActionLink("О проекте", "About", "Home", null, new { @class = "header-l" })</li>
                            <li>@Html.ActionLink("Контакты", "Contact", "Home", null, new { @class = "header-l" })</li>
                            @{
                                if (HttpContext.Current.User.Identity.IsAuthenticated)
                                {
                                    <li>@Html.ActionLink("Выход", "LogOff", "Account", null, new { @class = "header-l" })</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Вход", "Login", "Account", null, new { @class = "header-l" })</li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main style="min-height: calc(100vh - 200px)">
        @RenderBody()
    </main>
    <footer style="height:50px">
        <div class="row">
            <div class="col-md-12 text-center">
                <p> Стеклов Владилсав, Контакты для связи: stekvladislav@gmail.com</p>
                <p style="background-color:lightgray"><b>Copyright © Все права защищены, 2021 - @DateTime.Now.Year.ToString()</b></p>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
