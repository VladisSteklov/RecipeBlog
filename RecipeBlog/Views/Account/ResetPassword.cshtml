@using RecipeBlog.ViewModels
@model ResetPasswordViewModel

<div style="margin-left:15px">
    <h3>Добро пожаловать на страницу смены пароля</h3>
    <p class="main-font">
        Введите использумый адрес почты и новый пароль
    </p>
</div>
<hr />
<div style="margin:15px">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        <div class="row">
            <div class="col-sm-2 col-md-1">
                <img class="user-recipe-img" src="~/Content/Images/user.png" />
            </div>
            <div class="col-sm-10 col-md-11">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-4 col-md-3 col-lg-2 control-label" })
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        <p class="text-muted">
                            Адрес подтвежденной почты
                        </p>
                    </div>
                </div>
                <div class="form-group" style="margin-top:25px">
                    @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 col-md-3 col-lg-2 control-label" })
                    <div class="col-sm-6">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        <p class="text-muted">
                            Новый пароль
                        </p>
                    </div>
                </div>
                <div class="form-group" style="margin-top:25px">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 col-md-3 col-lg-2 control-label" })
                    <div class="col-sm-6">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" style="margin-top:25px">
                    <div class="col-sm-offset-4 col-md-offset-2 col-lg-offset-1">
                        <input type="reset" class="btn btn-default" value="Очистить поля" />
                        <input type="submit" class="btn btn-danger" value="Сброс пароля" style="margin-left:30px" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

